{{!-- HERO BANNER --}}
<section class="hero is-fullheight">
  <div class="hero-body">
    <div class="bg-lighten wide">

      {{!-- HEADER --}}
      <p class="title is-4">Post your project:</p>
      
      {{!-- NEW POST FORM --}}
      <form class="form new-post-form">
        <div class="card">
          <div class="card-content">

            {{!-- PROJECT TITLE INPUT --}}
            <div class="field">
              <label class="label">Project Title</label>
              <div class="control">
                <input class="input project-title" id="postTitleInput" type="text" placeholder="Enter a title for your project">
              </div>
            </div>
            
            {{!-- DESCRIPTION INPUT --}}
            <div class="field">
              <label class="label">Description</label>
              <div class="control">
                <textarea class="textarea project-description" id="postBodyInput" placeholder="Describe your project"></textarea>
              </div>
            </div>

            {{!-- PROJECT FILE UPLOAD --}}
            <div class="field">
                <label class="label">Upload Project Files</label>
                <div class="file has-name" id="fileUpload">
                    <label class="file-label">
                        <input class="file-input" type="file" name="resume">
                        <span class="file-cta">
                            <span class="file-label">‚¨ÜüìÅ</span>
                        </span>
                        <span class="file-name">Upload a File</span>
                    </label>
                </div>
            </div>
            
            {{!-- SUBMIT BUTTON --}}
            <div class="field">
              <div class="control">
                <button class="button is-link" id="postButton" type="submit">Post Project</button>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>

<script src="/js/post.js"></script>


