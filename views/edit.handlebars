<div class="container">
    <div class="bg-lighten wide m-4">

        {{!-- HEADER --}}
        <p class="title is-4" id="contains-id" data-id="{{id}}">Edit project:</p>
        
        {{!-- NEW POST FORM --}}
        <form class="form update-post-form">
        <div class="card">
            <div class="card-content">

            {{!-- PROJECT TITLE INPUT --}}
            <div class="field">
                <label class="label">Project Title</label>
                <div class="control">
                <input class="input project-title" id="postTitleInput" type="text" value="{{title}}" placeholder="Enter a title for your project">
                </div>
            </div>
            
            {{!-- DESCRIPTION INPUT --}}
            <div class="field">
                <label class="label">Description</label>
                <div class="control">
                <textarea class="textarea project-description" id="postBodyInput" placeholder="Describe your project">{{body}}</textarea>
                </div>
            </div>

            {{!-- PROJECT FILE UPLOAD --}}
            <div class="field">
                <label class="label">Upload Project Files</label>
                <div class="file has-name" id="fileUpload">
                    <label class="file-label">
                        <input class="file-input" type="file" name="resume">
                        <span class="file-cta">
                            <span class="file-label">‚¨ÜüìÅ</span>
                        </span>
                        <span class="file-name">Upload a File</span>
                    </label>
                </div>
            </div>
            
            {{!-- SUBMIT BUTTON --}}
            <div class="field">
                <div class="control">
                <button class="button is-link" id="postButton" type="submit">Update Project</button>
                </div>
            </div>
            </div>
        </div>
        </form>
    </div>
</div>

<script src="/js/edit.js"></script>