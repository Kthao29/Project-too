<div class="container p-4 is-fullheight">

    {{!-- POST CARD EXAMPLE --}}
    <div class="card post m-4">
        <div class="card-content">
            {{!-- HEADER --}}
            <div class="media">
                {{!-- PROFILE PICTURE --}}
                <div class="media-left">
                <figure class="image is-64x64">
                    <img class="is-rounded" src="https://images2.imgbox.com/90/0c/3L5OF7gf_o.png" alt="Profile image">
                </figure>
                </div>
                {{!-- POST TITLE/USERNAME --}}
                <div class="media-content">
                <p class="title is-4">{{title}}</p>
                <p class="subtitle bold is-6">{{user.name}} // <time datetime="2016-1-1">11:09 PM - 14 Dec 2023</time></p>
                </div>
            </div>
            <hr>
            <div class="content has-text-black"> {{body}}
                <br><br>
                <a>Download File here or whatever</a>
                <br><br>
            </div>
        </div>
        {{!-- CARD BUTTONS --}}
            <footer class="card-footer">
                <a href="#" class="card-footer-item">Reply</a>
                <a href="#" class="card-footer-item">Like üëç</a>
            </footer>
    </div>

    {{#each comments as |comment|}}
    <div class="card comment m-4">
        <div class="card-content">
            {{!-- HEADER --}}
            <div class="media">
                {{!-- PROFILE PICTURE --}}
                <div class="media-left">
                <figure class="image is-48x48">
                    <img class="is-rounded" src="https://images2.imgbox.com/90/0c/3L5OF7gf_o.png" alt="Profile image">
                </figure>
                </div>
                {{!-- USERNAME/TIMESTAMP --}}
                <div class="media-content">
                <p class="title is-6 has-text-darkrose">{{this.user.name}}</p>
                <p class="subtitle is-6 has-text-black">11:24 PM - 14 Dec 2023</p>
                </div>
            </div>
            <hr>
            {{!-- COMMENT BODY --}}
            <div class="content has-text-black"> {{this.comment_text}}
                <br><br>
                {{!-- DOWNLOAD LINK (IF FILE ATTACHED) --}}
                <a>Download File here or whatever</a>
            </div>
        </div>
    </div>
    {{/each}}
    
    {{!-- POSTED COMMENT CARD EXAMPLE --}}


    {{!-- NEW COMMENT FORM --}}
    <div class="card m-4">
        <div class="card-content">

                {{!-- TEXT AREA INPUT --}}
                <div class="field">
                    <label class="label has-text-blue bold">New Reply</label>
                    <div class="control">
                    <textarea class="textarea" placeholder="Write your comment here!"></textarea>
                    </div>
                </div>

                {{!-- FILE UPLOAD --}}
                <div class="field">
                    <div class="file has-name">
                        <label class="file-label">
                            <input class="file-input" type="file" name="resume">
                            <span class="file-cta">
                                <span class="file-label">üìÅ Choose a file‚Ä¶</span>
                            </span>
                            <span class="file-name">Screen Shot 2017-07-29 at 15.54.25.png</span>
                        </label>
                    </div>
                </div>

                {{!-- SUBMIT/CANCEL BUTTONS --}}
                <div class="field is-grouped">
                <p class="control">
                    <a class="button is-primary">
                    Submit
                    </a>
                </p>
                <p class="control">
                    <a class="button is-light">
                    Cancel
                    </a>
                </p>
                </div>

        </div>
    </div>
</div>

